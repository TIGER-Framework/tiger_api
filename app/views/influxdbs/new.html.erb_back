<html>
  <title>TIGER: create InfluxDB adapter settings</title>
  <h1>Create InfluxDB adapter settings</h1>


  <% form_with scope: :influxdb, url: influxdbs_path, local: true do |form| %>
    <%= form.label(:adapter_name, "InfluxDB adapter name: ", :class=>"form_label") %>
    <%= form.text_field(:adapter_name, :class=>"form_input", value: 'InfluxDB JMeter') %>
  <br>
    <%= form.label(:host, "Host IP or DNS name: ", :class=>"form_label") %>
    <%= form.text_field(:host, :class=>"form_input", value: '') %>
  <br>
    <%= form.label(:port, "Port: ", :class=>"form_label") %>
    <%= form.text_field(:port, :class=>"form_input", value: '8086') %>
  <br>
    <%= form.label(:protocol, "Protocol: ", :class=>"form_label") %>
    <%= form.text_field(:protocol, :class=>"form_input", value: 'HTTPS') %>
  <br>
    <%= form.label(:db_name, "Database name: ", :class=>"form_label") %>
    <%= form.text_field(:db_name, :class=>"form_input", value: 'jmeter') %>
  <br>
    <%= form.label(:username, "InfluxDB user name: ", :class=>"form_label") %>
    <%= form.text_field(:username, :class=>"form_input", value: 'tiger') %>
  <br>
    <%= form.label(:password, "InfluxDB password: ", :class=>"form_label") %>
    <%= form.text_field(:password, :class=>"form_input", value: 'password') %>
  <br>
  <br>
  <br>
  <br>
    <p>
      <%= form.submit("Create InfluxDB adapter",:class=>"form_button") %>
    </p>
  <% end %>


</html>
